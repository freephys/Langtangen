#!/usr/bin/env python
import os, sys
from py4cs.Regression import *

test = TestRun('tests.v')

f = open('tmp.sh', 'w')
f.write("""
export QUERY_STRING='r=3.14'
python hw1.py.cgi
echo 'should be 0.00159265291649'
""")
f.close()
os.chmod('tmp.sh', 0755)  # executable for all
test.run('tmp.sh')

